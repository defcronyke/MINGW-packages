# Maintainer: Jeremy Carter
# Borrowed from previous maintainer: Tim Mayberry <mojofunk@gmail.com>

_realname=lv2
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.14.0
pkgrel=1
pkgdesc="Successor to the LADSPA audio plug-in standard"
url="http://lv2plug.in/"
license=('LGPL' 'custom')
arch=('any')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-libsndfile"
             "${MINGW_PACKAGE_PREFIX}-gtk2"
             "${MINGW_PACKAGE_PREFIX}-pkg-config"
             'python3'
             'patch')
optdepends=("${MINGW_PACKAGE_PREFIX}-libsndfile: Example sampler"
            "${MINGW_PACKAGE_PREFIX}-gtk2: Example sampler"
            'python3: Scripts')
source=("http://lv2plug.in/spec/${_realname}-${pkgver}.tar.bz2")
md5sums=('0b56285a77aac3c93b50c36203aa91ee')

prepare() {
    cd "${srcdir}/${_realname}-${pkgver}"
    patch -p1 -i "${srcdir}/../lv2dir.patch"
}

build() {
  cd "${srcdir}/${_realname}-${pkgver}"

  export PKG_CONFIG_PATH=${MINGW_PREFIX}/lib/pkgconfig
  export PKGCONFIG=${MINGW_PREFIX}/bin/pkg-config.exe
  /usr/bin/python3 ./waf configure --prefix=${MINGW_PREFIX} --copy-headers
  /usr/bin/python3 ./waf -v
}

package() {
  cd "${srcdir}/${_realname}-${pkgver}"
  /usr/bin/python3 ./waf -v install --destdir=${pkgdir}
}