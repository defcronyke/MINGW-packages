# Borrowed from previous maintainer: Tim Mayberry <mojofunk@gmail.com>

_realname=lilv
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.24.0
pkgrel=1
pkgdesc="A C library interface to the LV2 plug-in standard"
arch=('any')
url="http://drobilla.net/software/lilv/"
license=('custom:ISC')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-pkg-config"
             'python3')
depends=("${MINGW_PACKAGE_PREFIX}-sratom>=0.4.6") # 'jack')
#optdepends=('bash-completion')
source=("http://download.drobilla.net/${_realname}-${pkgver}.tar.bz2")
md5sums=('1d70964653027ba224c9f76abc0ee420')

build() {
  cd "${srcdir}/${_realname}-${pkgver}"

  export PKG_CONFIG_PATH=${MINGW_PREFIX}/lib/pkgconfig
  export PKGCONFIG=${MINGW_PREFIX}/bin/pkg-config.exe
  /usr/bin/python3 ./waf configure --prefix=${MINGW_PREFIX} --no-bash-completion
  /usr/bin/python3 ./waf -v
}

package() {
  cd "${srcdir}/${_realname}-${pkgver}"
  /usr/bin/python3 ./waf -v install --destdir=${pkgdir}
  mv "${pkgdir}/${MINGW_PREFIX}/lib/"*dll "${pkgdir}/${MINGW_PREFIX}/bin"
}